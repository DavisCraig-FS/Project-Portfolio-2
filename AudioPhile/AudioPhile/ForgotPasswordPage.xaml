<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AudioPhile.ForgotPasswordPage">
    <StackLayout Padding="24,0,24,10">
        <Label Text="PASSWORD RETRIEVAL" TextColor="White" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" VerticalOptions="Center" VerticalTextAlignment="Center" TextTransform="Uppercase" FontSize="30
               " Margin="0,20" FontFamily="AppFont"/>
        
        <Entry x:Name="forgotUsernameEntry" Placeholder="Enter username to view password" PlaceholderColor="White" TextColor="White" FontFamily="AppFont" Margin="0,10,0,20"/>
        <Button x:Name="forgotPassButton" Text="RETRIEVE PASSWORD" BackgroundColor="Blue" TextColor="White" FontFamily="AppFont" VerticalOptions="Center" HorizontalOptions="Fill" Margin="0,10,0,20" CornerRadius="9"/>
        <StackLayout Padding="24" Orientation="Horizontal">
            <Label Text="Password: " TextColor="White" FontSize="Large" FontFamily="AppFont"/>
            <Label x:Name="passwordLabel" Text="" TextColor="White" FontSize="Large" FontFamily="AppFont"/>
        </StackLayout>
        <Button x:Name="closeButton" Text="CLOSE" BackgroundColor="Blue" TextColor="White" FontFamily="AppFont" FontSize="Large" HorizontalOptions="Fill" VerticalOptions="EndAndExpand" CornerRadius="9"/>
    </StackLayout>
</ContentPage>
