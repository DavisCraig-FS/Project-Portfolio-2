<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AudioPhile.ForgotUsernamePage">
    <StackLayout Padding="24,0,24,10">
        <Label Text="USERNAME HINT" TextColor="White" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" VerticalOptions="Center" VerticalTextAlignment="Center" TextTransform="Uppercase" FontSize="30" FontFamily="AppFont" Margin="0,20"/>
        
        <StackLayout>
            <ListView x:Name="listView" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="" Height="50" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <Button x:Name="closeButton" Text="CLOSE" BackgroundColor="Blue" FontFamily="AppFont" VerticalOptions="End" HorizontalOptions="Fill" TextColor="White" FontSize="Large" CornerRadius="9"/>
    </StackLayout>
</ContentPage>
