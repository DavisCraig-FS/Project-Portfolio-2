<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Alpha.ForgotPasswordPage">
    <StackLayout>
        <Frame BackgroundColor="MidnightBlue" Padding="24" CornerRadius="0">
            <Label Text="Sign In" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Frame BackgroundColor="DarkSlateBlue" Padding="24">
            <Label Text="HINT" TextColor="White" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" VerticalOptions="Center" VerticalTextAlignment="Center" TextTransform="Uppercase" FontSize="Large" />
        </Frame>
        <Entry x:Name="forgotUsernameEntry" Placeholder="Enter username to view password" />
        <Button x:Name="forgotPassButton" Text="RETRIEVE PASSWORD" BackgroundColor="Green" TextColor="White" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
        <StackLayout Padding="24" Orientation="Horizontal">
            <Label Text="Password: " FontSize="Large" />
            <Label x:Name="passwordLabel" Text="" FontSize="Large" />
        </StackLayout>
        <Button x:Name="closeButton" Text="CLOSE" BackgroundColor="OrangeRed" TextColor="White" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" />
    </StackLayout>
</ContentPage>
